<body>
    <div class="topnav">
        <a href="/">Home</a>
        <a href="/create">Delete a Users</a>
    </div>

    <div class="form-add-new">
        <form action="/delete-user" method="post">
            <fieldset>
                <legend>Delete a User</legend>
                <div class="input-group d-non">
                    <label>Id: </label>
                    <input type="text" name="userId" value="<%= userEdit.id %>" />
                </div>
                <div class="input-group">
                    <label>Are your sure to delete this user with Email: </label>
                    <input type="text" name="email" value="<%= userEdit.email %>" />
                </div>
                <div>
                    <button>Confirm</button>
                </div>
            </fieldset>
        </form>
    </div>
</body>

